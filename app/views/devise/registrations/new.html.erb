<div class="container main-container">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<h2>Register New User</h2>
				<hr>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 field-label-responsive">
				<%= f.label :email, 'E-Mail', class: 'email' %>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<div class="input-group mb-2 mr-sm-2 mb-sm-0">
						<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-envelope icon-margin"></i></div>
						<%= f.email_field :email, class: 'form-control', placeholder: 'you@example.com', autofocus: true, autocomplete: 'email' %>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-control-feedback">
					<span class="text-danger align-middle">
						<!-- Put e-mail validation error messages here -->
					</span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 field-label-responsive">
				<%= f.label :password, 'Password', class: 'password' %>
				<% if @minimum_password_length %>
				<em>(<%= @minimum_password_length %> chars minimum)</em>
				<% end %>
			</div>
			<div class="col-md-6">
				<div class="form-group has-danger">
					<div class="input-group mb-2 mr-sm-2 mb-sm-0">
						<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key icon-margin"></i></div>
						<%= f.password_field :password, class: 'form-control', placeholder: 'Your password', autocomplete: 'off' %>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-control-feedback">
					<span class="text-danger align-middle">

					</span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 field-label-responsive">
				<%= f.label :password_confimation, 'Confirm Password', class: 'password' %>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<div class="input-group mb-2 mr-sm-2 mb-sm-0">
						<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-repeat icon-margin"></i></div>
						<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password', autocomplete: 'off' %>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 field-label-responsive">
				<%= f.label :firstname, 'Firstname', class: 'name' %>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<div class="input-group mb-2 mr-sm-2 mb-sm-0">
						<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-address-book icon-margin"></i></div>
						<%= f.text_field :first_name, class: 'form-control', placeholder: 'Your firstname', autofocus: true %>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-control-feedback">
					<span class="text-danger align-middle">
						<!-- Put name validation error messages here -->
					</span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 field-label-responsive">
				<%= f.label :lastname, 'Lastname', class: 'name' %>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<div class="input-group mb-2 mr-sm-2 mb-sm-0">
						<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-address-book-o icon-margin"></i></div>
						<%= f.text_field :last_name, class: 'form-control', placeholder: 'Your lastname', autofocus: true %>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-control-feedback">
					<span class="text-danger align-middle">
						<!-- Put name validation error messages here -->
					</span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3 field-label-responsive">
				<%= f.label :citizen_id, 'Citizen ID', class: 'name' %>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<div class="input-group mb-2 mr-sm-2 mb-sm-0">
						<div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-address-card icon-margin"></i></div>
						<%= f.text_field :citizen_id, class: 'form-control', placeholder: 'Your citizenID', autofocus: true %>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-control-feedback">
					<span class="text-danger align-middle">
						<!-- Put name validation error messages here -->
					</span>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<%= f.button fa_icon('user-plus', text: 'Sign up'), type: :submit, class: 'btn btn-success' %>
			</div>
		</div>
	<% end %>
</div>