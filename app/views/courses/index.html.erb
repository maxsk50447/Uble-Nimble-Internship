<div class="container main-container">
  <h2>Subject List</h2><br />
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Number of Subscriber</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each.with_index do |course, index| %>
        <tr data-link="<%= course_path(course) %>", class="td-pointer">
          <th scope="row"><%= index+1 %></th>
          <td><%= course.name %></td>
          <td><%= course.users.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

